<div class="modal couponDetail" id="couponDetailModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header couponDetail-header justify-content-between">
                <h5 class="modal-title">{{ translate('Thông tin voucher') }}</h5>
                <a class="text-white couponDetail-close" data-bs-dismiss="modal" aria-label="Close"><i class="fa-regular fa-xmark"></i></a>
            </div>
            <div class="modal-body couponDetail-body _modalContent">
                <ul>
                    <li>
                        <span>{{ translate('Mã khuyến mãi:') }}</span>
                        <span class="code"></span>
                    </li>
                    <li>
                        <span>{{ translate('Điều kiện:') }}</span>
                        <span class="content"></span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="modal couponListModal" id="couponListModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header couponListModal-header justify-content-between">
                <h5 class="modal-title">{{ translate('Mã khuyến mãi') }}</h5>
                <a class="text-dark couponDetail-close" data-bs-dismiss="modal" aria-label="Close"><i class="fa-regular fa-xmark"></i></a>
            </div>
            {% set coupons = getListCoupon({'couponLimit':1}) %}
            {% if coupons is not empty %}
            <div class="modal-body couponListModal-body _modalContent">
                {% for coupon in coupons %}
                    <div class="couponList-itemBox">
                        <div class="couponList-item">
                            <div class="couponList-item_money">{{ coupon.value/1000 }}K</div>
                            {% if(coupon.couponCode) is not empty %}
                            {% set c = coupon.couponCode | first %}
                                <div class="couponList-item_content">
                                    <div class="couponList-item_contentLeft">
                                        <p>{{ translate('Mã khuyến mãi: ') }}<span>{{ c.code }}</span></p>
                                        <p class="s-textLimit" style="--line:1">{{ coupon.description }}</p>
                                    </div>
                                    <div class="couponList-item_contentRight">
                                        <p class="coupon-content_copyBtn" data-coupon="{{ c.code }}">{{ translate('Sao chép mã') }}</p>
                                        {% if(coupon.description is not empty) %}
                                            <a class="coupon-content_conditional j-showDesc" data-id="{{ coupon.id }}" href="javascript:void(0)">{{ translate("Điều kiện") }}</a>
                                        {% endif %}
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                        <div class="couponList-desc couponList-desc-{{ coupon.id }}">{{ coupon.description }}</div>
                    </div>
                {% endfor %}
            </div>
            {% else %}
                <p>{{ translate('Đã hết mã khuyến mãi') }}</p>
            {% endif %}
        </div>
    </div>
</div>
